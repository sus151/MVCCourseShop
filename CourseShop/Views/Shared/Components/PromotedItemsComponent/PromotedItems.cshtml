@model IEnumerable<CourseShop.Application.PromotedItem.Queries.GetAllPromotedItems.GetAllPromotedItemsQuery>
<style>
.details {
    display: inline-block;
    color: orange; /* Domyślny kolor tekstu */
    background-size: 0 100%;
    background-repeat: no-repeat;
    transition: background-size 0.5s ease, color 0.5s ease; /* Dodanie przejścia dla koloru */
}

.details:hover {
    background-image: linear-gradient(to right, orange, orange);
    background-size: 100% 100%;
    color: white; /* Zmiana koloru tekstu na biały po najechaniu */
}

.span-pointer{
    cursor: pointer;
}


</style>
@foreach (var item in Model)
{
        var url = "";
    <div class="col-12 col-md-8 col-lg-7 col-xl-4 ">
        @if (item.IdCategory!=null)
        {
            <span class="fs-4 fw-bold span-pointer">@item.CategoryName</span>
            url =  Url.Action("SubCatDetails", "Category", new { id = item.IdCategory });
        }
        @if (item.IdMainCategory!=null)
        {
            <span class="fs-4 fw-bold span-pointer">@item.MainCategoryName</span>
            url =  Url.Action("MainCatDetails", "Category", new { id = item.IdMainCategory });
        }
        @if (item.IdCourse!=null)
        {
            <span class="fs-4 fw-bold span-pointer">@item.CourseName</span>
            url =  Url.Action("Details", "Course", new { id = item.IdCourse });
        }
        <img src="data:image;base64,@System.Convert.ToBase64String(item.Photo)" style="width: 100%; height: 400px; object-fit: cover;cursor: pointer;"/>
        <a href="@url" class="fs-5 details text-decoration-none px-2 rounded-3 mt-2 " style="border: 2px solid orange; cursor: pointer;">Szczegóły</a>
    </div>


}
